<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Bar / Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_main_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_chat_notification"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_chat_notification"
            app:layout_constraintLeft_toLeftOf="@id/iv_chat_back"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_chat_notification_count"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toLeftOf="@id/iv_chat_notification"
            app:layout_constraintTop_toTopOf="@id/iv_chat_notification" />

        <ImageView
            android:id="@+id/iv_chat_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_chat_profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_chat_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_chat_left_chevron"
            app:layout_constraintBottom_toTopOf="@+id/divide_line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_chat_receiver"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/chat_header_title"
            app:layout_constraintBottom_toTopOf="@+id/divide_line1"
            app:layout_constraintRight_toRightOf="@id/iv_chat_profile"
            app:layout_constraintLeft_toLeftOf="@+id/iv_chat_back"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divide_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            app:layout_constraintBottom_toBottomOf="@id/ly_main_bar"
            tools:layout_editor_absoluteX="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edt_lawyer_search"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_lawyer_list_search__normal"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        android:hint="@string/str_edt_lawyer_search"
        android:background="@drawable/bg_lawyer_list_search"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_main_bar"
        android:inputType="text"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/divide_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            app:layout_constraintTop_toTopOf="@id/ly_bottom_bar"
            tools:layout_editor_absoluteX="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>