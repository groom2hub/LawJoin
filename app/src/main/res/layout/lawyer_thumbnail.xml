<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_lawyer_thumbnail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_lawyer_thumbnail">
    <View
        android:id="@+id/divide_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="4dp" />

    <ImageView
        android:id="@+id/iv_lawyer_image"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/ic_chat_profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_lawyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:text="한문철 변호사"
        app:layout_constraintLeft_toRightOf="@id/iv_lawyer_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lawyer_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:text="사법 연수원 출신"
        app:layout_constraintLeft_toRightOf="@id/iv_lawyer_image"
        app:layout_constraintTop_toBottomOf="@id/tv_lawyer_name" />

    <TextView
        android:id="@+id/tv_lawyer_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:text="후기 100+"
        app:layout_constraintLeft_toRightOf="@id/iv_lawyer_image"
        app:layout_constraintTop_toBottomOf="@id/tv_lawyer_summary" />

    <TextView
        android:id="@+id/tv_lawyer_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="이혼 소송 담당"
        app:layout_constraintTop_toBottomOf="@id/tv_lawyer_summary"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/divide_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>