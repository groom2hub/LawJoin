<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_free_board">

    <!-- App name -->
    <TextView
        android:id="@+id/join"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8sp"
        android:text="@string/loadong_lawjoin"
        android:textAppearance="@style/join"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <!-- 넘김 -->
    <TextView
        android:id="@+id/text_skip"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="5sp"
        android:text="@string/start_page_skip"
        android:textAppearance="@style/start_page_skip"
        android:translationY="-2.61sp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="28dp" />

    <!-- image -->

    <View
        android:id="@+id/start_page_image"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:background="@drawable/ic_start_page_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"/>

    <TextView
        android:id="@+id/start_page_text1"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="12sp"
        android:text="@string/start_page2_text1"
        android:textAppearance="@style/start_page_text1"
        android:translationY="-5.91sp"
        app:layout_constraintTop_toBottomOf="@+id/start_page_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/start_page_text2"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="8sp"
        android:text="@string/start_page2_text2"
        android:textAppearance="@style/start_page_text2"
        android:translationY="-3.78sp"
        app:layout_constraintTop_toBottomOf="@+id/start_page_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <LinearLayout
        android:id="@+id/group_dot"
        android:layout_width="60dp"
        android:layout_height="8dp"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/start_page_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- dot1 -->
        <View
            android:id="@+id/dot1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/ic_start_page_dot_default" />
        <!-- dot1 -->
        <View
            android:id="@+id/dot2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/ic_start_page_dot_activated" />
        <!-- dot1 -->
        <View
            android:id="@+id/dot3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/ic_start_page_dot_default" />
    </LinearLayout>

    <!-- next_button -->
    <Button
        android:id="@+id/button"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_write_post"
        android:gravity="center"
        android:text="@string/start_page_next"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/group_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>