<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ly_chat_sender"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_sender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:background="@drawable/bg_chat_sender"
        android:gravity="start|center_vertical"
        android:linksClickable="true"
        android:padding="10dp"
        android:text="안녕하세요."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sender_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="오전 10:23"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sender_text"
        app:layout_constraintStart_toEndOf="@+id/tv_sender_text"
        app:layout_constraintTop_toTopOf="@id/tv_sender_text"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tv_sender_is_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="1"
        android:textColor="#FFBE3C"
        app:layout_constraintBottom_toBottomOf="@id/tv_sender_date"
        app:layout_constraintStart_toEndOf="@id/tv_sender_date"
        app:layout_constraintTop_toTopOf="@id/tv_sender_date" />
</androidx.constraintlayout.widget.ConstraintLayout>