<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 공지1 -->
    <LinearLayout
        android:id="@+id/avatar_list_notice1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_free_board_post_list"
        android:orientation="horizontal">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_free_board_notice"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/avatar_list_notice_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="left|center"
            android:text="@string/notice_title"
            android:textAppearance="@style/list_item_o"
            android:textSize="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>